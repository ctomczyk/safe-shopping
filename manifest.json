{
  "description": "Determine shopping issues and raise a warning",
  "manifest_version": 3,
  "name": "Safe Shopping",
  "version": "0.0.1",
  "author": "Cezary Tomczyk <cezary.tomczyk@gmail.com>",
  "homepage_url": "https://github.com/ctomczyk/safe-shopping.git",
  "icons": {
    "16": "images/icons/extension-icon-16.png",
    "24": "images/icons/extension-icon-24.png",
    "48": "images/icons/extension-icon-48.png",
    "64": "images/icons/extension-icon-64.png",
    "128": "images/icons/extension-icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icons/extension-icon-16.png",
      "24": "images/icons/extension-icon-24.png",
      "48": "images/icons/extension-icon-48.png",
      "64": "images/icons/extension-icon-64.png",
      "128": "images/icons/extension-icon-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "views/*",
        "js/modules/*",
        "js/did-methods/*",
        "page.js",
        "node_modules/@transmute/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "content-scripts.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ]
}
